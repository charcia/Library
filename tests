    <script>
        var myLibrary=[];
        const book1={
          author:'Ali',
          title:'Guide to cooking',
          pages:'100',
        }
        
        const book2={
          author:'Ali',
          title:'Guide to learning',
          pages:'100',
        }
        
        myLibrary.push(book1)
        myLibrary.push(book2)

        function Book(){
            prompt()
            this.author=author;
            this.title=title;
            this.pages=pages;
        }

        function addBooktoLibrary(){
            var newBook=new Book()
            myLibrary.push(newBook);
        }

        function display_books(){
        for (let i=0;i<myLibrary.length;i++){
            alert(myLibrary[i]);
        }

      
        const addBook=document.getElementById('submit');
        const display=document.getElementById('display');
      
        document.getElementById('button').addEventListener('click',function(){display_books});
        addBook.addEventListener('click',function(){addBookToLibrary()});

    </script>

